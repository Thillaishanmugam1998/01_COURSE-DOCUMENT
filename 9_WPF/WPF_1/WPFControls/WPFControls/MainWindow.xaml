<Window x:Class="WPFControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        
        <!--Label-->
        <Label Content="Enter your name:" HorizontalAlignment ="Left" Margin="30,40,0,0" VerticalAlignment="Top"/>

        <!-- TextBox -->
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" Height="23" Margin="140,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>

        <!-- Button -->
        <Button Content="Submit" HorizontalAlignment="Left" Margin="140,80,0,0" VerticalAlignment="Top" Width="80" Click="SubmitButton_Click"/>

        <!-- Label to display result -->
        <Label Name="ResultLabel" Content="" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top" Width="290"/>
    </Grid>
</Window>
