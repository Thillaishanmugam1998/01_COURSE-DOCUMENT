<Window x:Class="WPF_STYLES.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_STYLES"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!--Window Level Style-->
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Background" Value="RosyBrown"/>
            <Setter Property="Foreground" Value="AliceBlue"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>

        <!--01. Inline Style-->
        <Button Content="Inline Styled Button" Width="150" Height="50" Background="Blue" Foreground="White" FontWeight="Bold" Margin="325,194,325,190" />

        <!--02. Application Level Style -->
        <Button Content="Application Level Style" Width="150"  Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,190,0,0" />

        <!--03. Window Level Style-->
        <Label Content=" Window Level Style"  Width="150" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="520,0,0,0" />

    </Grid>
</Window>
