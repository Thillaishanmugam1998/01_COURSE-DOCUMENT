<Window x:Class="WPF_DATABINDINGS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DATABINDINGS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="BlueViolet"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <StackPanel>
        <Button Content="01.DATA BINDING" Margin="15" Click="Button_Click"> </Button>
        <Button Content="02.ELEMENT BINDING" Margin="15" Click="Button_Click_1"> </Button>
        <Button Content="03.RESOURCES BINDING" Margin="15" Click="Button_Click_2"></Button>
    </StackPanel>
</Window>
