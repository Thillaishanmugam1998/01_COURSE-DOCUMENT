<Window x:Class="WPF_LAYOUTS.WrapPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LAYOUTS"
        mc:Ignorable="d"
        Title="WrapPanelWindow" Height="450" Width="800">
    
    <Grid Margin="25,30">
        <WrapPanel>
            <Button Content="Button 1" Width="100" Height="50"/>
            <Button Content="Button 2" Width="100" Height="50"/>
            <Button Content="Button 3" Width="100" Height="50"/>
            <Button Content="Button 4" Width="100" Height="50"/>
        </WrapPanel>
    </Grid>
</Window>
