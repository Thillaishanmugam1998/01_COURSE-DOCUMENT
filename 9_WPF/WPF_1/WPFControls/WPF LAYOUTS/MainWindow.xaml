<Window x:Class="WPF_LAYOUTS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LAYOUTS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="GridView Layout" Click="GridView_Click" Margin="10"/>
        <Button Content="DockPanel Layout" Click="DockPanel_Click" Margin="10"/>
        <Button Content="StackPanel Layout" Click="StackPanel_Click" Margin="10"/>
        <Button Content="WrapPanel Layout" Click="WrapPanel_Click" Margin="10"/>
        <Button Content="Canvas Layout" Click="Canvas_Click" Margin="10"/>
    </StackPanel>
</Window>
