<Application x:Class="WPF_Value_Conversion.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_Value_Conversion"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <!-- Register the converter as a resource -->
        <local:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Register the ScoreToColorConverter as a resource -->
        <local:ScoreToColorConverter x:Key="ScoreToColorConverter"/>
        
    </Application.Resources>
    
</Application>
